#Antes de mais nada
sudo aptitude update

#Fonts true type
sudo aptitude install msttcorefonts

#Wine
sudo aptitude install wine

#PostgreSQL
sudo aptitude install postgresql-8.3 postgresql-client-8.3 pgadmin3 pgadmin3-data postgresql-server-dev-8.3 libpostgresql-ocaml-dev

#Configurar a senha do PostgreSQL
sudo su postgres -c psql postgres
ALTER USER postgres WITH PASSWORD 'qualquer_senha';

#Configurar fonte Monaco (link do tutorial: http://blog.siverti.com.br/2008/05/22/fonte-monaco-no-ubuntugedit/)

  #Instalar fonte
  cd /usr/share/fonts/truetype
  sudo mkdir myfonts
  cd myfonts
  sudo cp ~/.fonts/Monaco_Linux.ttf .
  sudo chown root.root *.ttf
  sudo mkfontdir
  cd ..
  fc-cache

  #Configurar ~/.fonts.conf
  <?xml version="1.0"?>
  <!DOCTYPE fontconfig SYSTEM "fonts.dtd">
  <fontconfig>
    <match target="font">
      <test qual="any" name="family">
        <string>Monaco</string>
      </test>
      <edit name="autohint" mode="assign">
        <bool>true</bool>
      </edit>
      <edit name="hintstyle" mode="assign">
        <const>hintnone</const>
      </edit>
    </match>
  </fontconfig>

